---
import Link from '@/components/Link.astro'
import Text from '@/components/Text.astro'
import Title from '@/components/Title.astro'
import { DISCORD_LINK } from '@/shared/constants.js'
---

<section id="hero" class="relative flex py-14 items-center justify-center min-h-screen after:content-[''] after:absolute after:opacity-50 after:top-0 after:right-0 after:bottom-0 after:left-0 after:[background-size:auto_70%] after:[background:url('/circuit.svg')_no-repeat_center_right] after:-z-10">
  <div class="container grid gap-6 px-3 max-w-3xl lg:px-0 2xl:max-w-7xl">
    <article class="grid gap-4 max-w-[760px] justify-center lg:justify-start">
      <Title>Somos Fazt Community</Title>
      <Text>Crece como profesional compartiendo tus conocimientos con los dem√°s y participando en proyectos open source.</Text>
    </article>
    <article class="grid justify-items-center gap-6 lg:grid-cols-[repeat(2,fit-content(100%))]">
      <Link external to={DISCORD_LINK} className="btn primary fill large">
        Unirme a la comunidad
      </Link>
      <Link className="btn secondary outline large">Ver proyectos</Link>
    </article>
  </div>
</section>
